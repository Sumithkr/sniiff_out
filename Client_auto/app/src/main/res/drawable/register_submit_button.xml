    <item android:id="@android:id/background">

        <shape>
            <corners android:radius="38dp" ></corners>
            <padding android:bottom="5dp" android:top="10dp" android:left="10dp" android:right="10dp"/>
            <solid android:color="@color/green"/>
        </shape>

    </item>
</ripple>