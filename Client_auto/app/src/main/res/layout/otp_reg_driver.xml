<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="600dp"
    android:background="@drawable/alert_dialog_rounded_corners">

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/closing_image"
        android:background="@drawable/closing_icon"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/otp_icon"
        android:background="@drawable/otp_icon"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/closing_image"
        android:layout_centerHorizontal="true" />


    <EditText
        android:layout_height="50dp"
        android:layout_width="220dp"
        android:hint="Insert the code"
        android:textSize="14dp"
        android:textColorHint="@color/green"
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/green"
        android:drawablePadding="15dp"
        android:inputType="number"
        android:id="@+id/email_editext"
        android:layout_gravity="bottom"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />



    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="   Please enter the OTP which has been
sent to your mobile number "
        android:gravity="start"
        android:textSize="17dp"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/otp_icon"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/colorAccent"
        android:id="@+id/set"
        android:layout_below="@+id/swipe_driver"
        android:layout_centerHorizontal="true" />


    <com.ebanx.swipebtn.SwipeButton

        android:layout_width="250dp"
        android:id="@+id/swipe_driver"
        android:layout_height="wrap_content"
        app:inner_text="SWIPE TO VERIFY"
        app:inner_text_top_padding="10dp"
        app:inner_text_left_padding="35dp"
        app:inner_text_bottom_padding="10dp"
        android:backgroundTintMode="@color/green"
        app:button_image_enabled="@drawable/right_arrow"
        app:button_image_disabled="@drawable/right_arrow"
        app:inner_text_size="15sp"
        app:button_top_padding="15dp"
        app:button_bottom_padding="15dp"
        app:button_left_padding="15dp"
        app:button_right_padding="15dp"
        android:layout_below="@+id/email_editext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />

</RelativeLayout>